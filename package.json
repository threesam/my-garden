{
  "name": "digital-garden",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "echo 'No linter configured'",
    "analyze": "vite build --mode analyze",
    "perf": "vite build && vite preview --port 4173",
    "lighthouse": "npx lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html",
    "bundle-analyzer": "vite build && npx vite-bundle-analyzer"
  },
  "dependencies": {
    "@sanity/client": "^6.20.0",
    "groq": "^3.57.3",
    "sanity": "^3.59.0",
    "svelte": "^5.1.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-vercel": "^4.0.5",
    "@sveltejs/kit": "^2.27.3",
    "@tailwindcss/vite": "^4.0.0",
    "svelte-check": "^4.1.0",
    "tailwindcss": "^4.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^7.0.0",
    "vite-bundle-analyzer": "^0.7.0"
  }
}
